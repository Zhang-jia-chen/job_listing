<table class="table table-bordered">
  <thead>
      <tr>
          <td>
              职缺
          </td>
          <td>
            职位描述
          </td>
          <td>
              薪资下限
          </td>
          <td>
              薪资上限
          </td>
          <td>
              刊登时间
          </td>
      </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <h1> <%= @job.title %> </h1>
      </td>
      <td>
          <%= simple_format(@job.description) %>
      </td>
      <td> <%= @job.wage_lower_bound %> </td>
      <td> <%= @job.wage_upper_bound %> </td>
      <td> <%= @job.created_at.strftime('%Y-%m-%d')%></td>
    </tr>
  </tbody>

</table>
<div class="text-center">
  <%= link_to("投交简历", new_job_resume_path(@job), :style => "font-size: 30px; text-decoration: underline;") %>
</div>
